{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}

{% block body %}
    <h1>Category list</h1>
{% if categories is not empty %}

{{ dump(categories) }}

    <table border="1">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Description</th>
            <th>delete</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td><a href="{{ path('a_category',{'id':category.id}) }}">
                    {{ category.name }}
                    </a>
                    </td>
                <td>{{ category.description }}</td>
                <td><a href="{{ path('delete_category',{'id':category.id}) }}">
                        delete
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% else %}
    <p>Theres no Category</p>

{% endif %}
<h2> Add a category</h2>

{{ form(add_form) }}

{% endblock %}
